<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_language"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_light"
            android:text="@string/script_url" />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/text_color_tinted"
            android:fontFamily="@font/inter_extra_light"
            android:layout_marginBottom="5dp"
            android:text="@string/source_explain_script_url" />

        <LinearLayout
            android:id="@+id/bullet_points"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.futo.platformplayer.views.others.BulletPointView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueColor="@color/colorPrimary"
                app:bulletText="youtube.com" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>